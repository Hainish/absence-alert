<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table width='100%'>
  <thead>
    <tr>
      <th>Email</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.email %></td>
        <td>
          <% if contact.confirmed %>
            <span class="glyphicon glyphicon-ok-circle"></span> Confirmed
          <% elsif contact.rejected %>
            <span class="glyphicon glyphicon-ban-circle"></span> Rejected
          <% else %>
            <span class="glyphicon glyphicon-question-sign"></span> Waiting for confirmation
          <% end %>
        </td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


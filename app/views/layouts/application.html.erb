<!DOCTYPE html>
<html>
  <head>
    <title>Absence Alert</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Absence Alert</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            Signed in as: <%= current_user.email %>
            <%= button_to 'Edit', edit_user_path(current_user.id), method: :get, class: "btn btn-default navbar-btn" %>
            <%= button_to 'Sign Out', sign_out_path, method: :delete, class: "btn btn-default navbar-btn" %>
          <% else %>
            <%= button_to 'Sign In', sign_in_path, method: :get, class: "btn btn-default navbar-btn pull-right", form_class: "pull-right" %>
            <%= button_to 'Sign Up', sign_up_path, method: :get, class: "btn btn-default navbar-btn pull-right", form_class: "pull-right" %>
          <% end %>

          <div id="flash">
            <% flash.each do |key, value| %>
              <div class="flash <%= key %>"><%= value %></div>
            <% end %>
          </div>

        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
